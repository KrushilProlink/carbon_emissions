    <table>
        <tr>
            <th>Digital Campaign</th>
            <td>
                <%= data.totalDigitalCampaign %> metric CO2e
            </td>
        </tr>
    </table>

    <h4 class=''>Total = <%= data.grandTotal %> metric CO2e</h4>

</body>

</html>